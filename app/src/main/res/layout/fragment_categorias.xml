<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CategoriasFragment">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="72dp"> <!-- deja espacio para el botÃ³n fijo abajo -->

        <TextView
            android:id="@+id/titulo_categorias"
            android:layout_width="match_parent"
            android:layout_height="81dp"
            android:gravity="center"
            android:text="Categorias" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_categorias"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:padding="8dp"
            android:paddingBottom="72dp"
            android:scrollbars="vertical" />

    </LinearLayout>

    <Button
        android:id="@+id/btn_agregar_categoria"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_gravity="bottom"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="12dp"
        android:background="@drawable/background_boton"
        android:text="Button"
        app:backgroundTint="@null" />
</FrameLayout>